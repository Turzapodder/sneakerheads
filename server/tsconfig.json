{
  "compilerOptions": {
    // Allow JavaScript files to be compiled
    "allowJs": true,
    
    // Check JavaScript files for type errors using JSDoc
    "checkJs": false,
    
    // Target ES2020 for modern Node.js
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    
    // Node.js types
    "types": ["node"],
    
    // Module resolution
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    
    // Output settings (not used for JS, but good for IDE)
    "outDir": "./dist",
    "rootDir": "./",
    
    // Strict type checking (for JSDoc comments)
    "strict": false,
    "noImplicitAny": false,
    
    // Skip type checking of declaration files
    "skipLibCheck": true,
    
    // Force consistent casing in file names
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "index.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
